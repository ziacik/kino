{
  "name": "resource",
  "plural": "resources",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "type": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "year": {
      "type": "number"
    },
    "season": {
      "type": "number"
    },
    "externalId": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "parent": {
      "type": "belongsTo",
      "model": "resource",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {
    "discover": {
      "accepts": [
        {
          "arg": "query",
          "type": "string",
          "required": true,
          "description": "A query for the discovery (name)",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": [
        {
          "arg": "resources",
          "type": "array",
          "root": true,
          "description": "An array of dicovered resources"
        }
      ],
      "description": "Discovers resources from external source (like tvdb)",
      "http": [
        {
          "path": "/resources/discovery",
          "verb": "get"
        }
      ]
    }
  }
}
